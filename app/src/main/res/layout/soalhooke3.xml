<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/soalhooke3"
    tools:context="com.luthfiapriyantogmail.unphysics.SoalTegangan">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton4"
        android:background="@drawable/hint"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/imageButton3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:background="@drawable/forward"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="38dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="A"
        android:id="@+id/a"
        android:onClick="a"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageButton4"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_marginTop="220dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="B"
        android:id="@+id/b"
        android:onClick="b"
        android:layout_below="@+id/a"
        android:layout_alignLeft="@+id/a"
        android:layout_alignStart="@+id/a"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="C"
        android:id="@+id/c"
        android:onClick="c"
        android:layout_below="@+id/b"
        android:layout_alignLeft="@+id/b"
        android:layout_alignStart="@+id/b"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="D"
        android:id="@+id/d"
        android:onClick="d"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/c"
        android:layout_alignLeft="@+id/c"
        android:layout_alignStart="@+id/c" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="E"
        android:id="@+id/e"
        android:onClick="e"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/d"
        android:layout_alignLeft="@+id/d"
        android:layout_alignStart="@+id/d" />

</RelativeLayout>
