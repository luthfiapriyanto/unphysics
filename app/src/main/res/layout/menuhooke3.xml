<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backroundstage"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.luthfiapriyantogmail.unphysics.MenuReganganFinal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:background="@drawable/einsteincarup"
        android:layout_marginBottom="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/buttonstagesatu"
        android:layout_below="@+id/tombolketegangan"
        android:layout_toRightOf="@+id/tombolketegangan"
        android:layout_toEndOf="@+id/tombolketegangan" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonkefinal"
        android:background="@drawable/buttonstagetiga"
        android:layout_marginBottom="47dp"
        android:layout_above="@+id/tombolketegangan"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tombolketegangan"
        android:background="@drawable/buttonstagedua"
        android:contentDescription="tegangankedua"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp" />

</RelativeLayout>
